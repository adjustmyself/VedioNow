{
  "name": "video-now",
  "version": "1.0.0",
  "description": "影片管理程式 - 支援標籤系統和本機/網路磁碟路徑",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "video",
    "management",
    "tagging",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "chokidar": "^3.5.3",
    "path": "^0.12.7",
    "fs-extra": "^11.1.1"
  },
  "build": {
    "appId": "com.videonow.app",
    "productName": "VideoNow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}